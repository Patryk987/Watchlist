@model IEnumerable<Watchlist.Models.WatchListModel>

@{
    ViewData["Title"] = "Index";
}

<div class="title">
    <h1>Your watch list</h1>
</div>

<div class="row" id="card">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card" style="background-image: url('@Html.DisplayFor(modelItem => item.ImageUrl)')">

                <div class="data">
                    <p class="title">@Html.DisplayFor(modelItem => item.Title)</p>
                    <p class="stauts">@Html.DisplayFor(modelItem => item.Status)</p>

                    <div class="buttons">
                        <a asp-action="Details" asp-route-id="@item.id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.id" class="delete">
                            <img src="~/img/trash.svg" alt="trash" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>